# ========================================
# SERVER CONFIGURATION
# ========================================
NODE_ENV=development
PORT=3000

# ========================================
# DATABASE CONFIGURATION
# ========================================
MONGODB_URI=mongodb://localhost:27017/dex-order-engine

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ========================================
# QUEUE CONFIGURATION
# ========================================
QUEUE_CONCURRENCY=10
QUEUE_RATE_LIMIT=100

# ========================================
# LOGGING
# ========================================
LOG_LEVEL=info

# ========================================
# ORDER PROCESSING
# ========================================
MAX_CONCURRENT_ORDERS=10
ORDERS_PER_MINUTE=100
MAX_RETRY_ATTEMPTS=3

# ========================================
# TRADING CONFIGURATION
# ========================================
DEFAULT_SLIPPAGE=0.01
PRICE_VARIATION_MIN=0.02
PRICE_VARIATION_MAX=0.05

# ========================================
# TRADING MODE
# ========================================
# true = Mock Mode (simulated trading, no blockchain)
# false = Real Mode (Solana devnet/mainnet integration)
MOCK_MODE=true

# ========================================
# SOLANA CONFIGURATION (Required when MOCK_MODE=false)
# ========================================
# RPC Endpoint - Use devnet for testing
SOLANA_RPC_URL=https://api.devnet.solana.com

# Network: devnet or mainnet-beta
SOLANA_NETWORK=devnet

# Wallet Private Key (Base58 encoded)
# ⚠️  SECURITY WARNING:
#   - Generate with: npm run generate-keypair
#   - NEVER commit real private keys to git
#   - Use separate keypairs for dev/staging/production
#   - Store securely in environment variables for deployment
WALLET_PRIVATE_KEY=

# ========================================
# SETUP INSTRUCTIONS FOR REAL MODE
# ========================================
# 1. Generate keypair:     npm run generate-keypair
# 2. Update WALLET_PRIVATE_KEY above with generated key
# 3. Get devnet SOL:       npm run airdrop
# 4. Validate setup:       npm run validate-setup
# 5. Set MOCK_MODE=false
# 6. Restart server:       npm run dev
#
# For detailed instructions, see: DEVNET_GUIDE.md
# For FAQ and troubleshooting, see: REAL_MODE_FAQ.md
